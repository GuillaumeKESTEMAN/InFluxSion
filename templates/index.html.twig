{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
<h1 class="text-2xl font-bold text-center mb-8">InFluxSion</h1>

<div class="flex flex-col items-center w-[70%] mx-auto">
    {% for article in articles %}
        <a href="{{ article.url }}" target="_blank" rel="noopener noreferrer" class="flex items-center w-full bg-[#1D1D1D] p-4 hover:bg-[#2A2A2A] transition border-b-2 border-green-600 rounded-none">
            <div class="flex-shrink-0 w-[120px] h-[120px]">
                <img src="{{ article.image ?: asset('icons/logo.svg') }}" alt="{{ article.title }}" class="w-full h-full object-cover rounded-lg">
            </div>
            <div class="ml-4 text-[#868383]">
                <h2 class="font-bold text-lg">{{ article.title }}</h2>
                <p class="text-sm">{{ article.description }}</p>
                <p class="italic text-sm mt-2">Publi√© le {{ article.date|date('d/m/Y') }}</p>
            </div>
        </a>
    {% else %}
        <p class="text-center text-[#868383]">Aucun article disponible.</p>
    {% endfor %}
</div>
{% endblock %}
