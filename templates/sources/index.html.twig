{% extends 'base.html.twig' %}

{% block title %}Sources{% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="bg-green-500 text-white p-3 rounded-md">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="bg-red-500 text-white p-3 rounded-md">
            {{ message }}
        </div>
    {% endfor %}

    <div class="flex flex-col ml-9 ">
        <button id="openDialogBtn" class="flex text-[#1AD9CB] w-fit" >{{ ux_icon('line-md:plus-circle', {width: '40px', height: '40px'}) }}</button>

        <div class="flex flex-col items-center">
            <div id="myDialog" class="hidden absolute  backdrop-blur-xl flex items-center z-50 bg-white/5 p-6 rounded-lg shadow-lg w-lg">
                <h1 class="text-3xl mb-4 bg-gradient-to-r from-green-600 to-cyan-600 bg-clip-text text-transparent">Ajouter une source</h1>
                <form class="flex items-center flex-col gap-3" action="{{ path('source_add') }}" method="POST">
                    <input
                            class="rounded-full w-96 h-10 text-lg backdrop-blur-xl bg-white/5 placeholder-gray-400 px-6 text-gray-200"
                            type="text"
                            placeholder="Url de la source"
                            name="url">
                    <input
                            class="rounded-full w-96 h-10 text-lg backdrop-blur-xl bg-white/5 placeholder-gray-400 px-6 text-gray-200"
                            type="text"
                            placeholder="Nom de la source"
                            name="name">
                    <div class="flex justify-between">
                            <button
                                    id="closeDialogBtn"
                                    class="mt-4 px-4 py-1 text-green-400 rounded-full"
                                    type="button"
                            >Fermer</button>
                            <button
                                    id="addSourceBtn"
                                    type="submit"
                                    class="rounded-full px-4 py-1 mt-4 text-green-400 border-2 border-green-400 hover:text-white hover:bg-green-400 transition-colors duration-300 ease-in-out"
                            >Ajouter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <h1 class="text-2xl font-bold text-center mb-8">Liste des Sources</h1>

    <div class="flex flex-col items-center w-[70%] mx-auto">
        {% for source in sources %}
            <a href="{{ source.url }}" target="_blank" rel="noopener noreferrer" class="flex items-center w-full bg-[#1D1D1D] p-4 hover:bg-[#2A2A2A] transition border-b-2 border-green-600 rounded-none">
                <div class="ml-4 text-[#868383]">
                    <h2 class="font-bold text-lg">{{ source.name }}</h2>
                    <p class="text-sm">{{ source.url }}</p>
                </div>
            </a>
        {% else %}
            <p class="text-center text-[#868383]">Aucune source disponible.</p>
        {% endfor %}
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const openBtn = document.getElementById("openDialogBtn");
            const closeBtn = document.getElementById("closeDialogBtn");
            const dialog = document.getElementById("myDialog");

            openBtn.addEventListener("click", function () {
                dialog.style.display = "block";
            });

            closeBtn.addEventListener("click", function () {
                dialog.style.display = "none";
            });
        });
    </script>
{% endblock %}


